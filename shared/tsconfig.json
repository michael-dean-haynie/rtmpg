{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],

    "module": "system",
    "rootDir": "src",

    "allowJs": true,
    "outDir": "build/",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "references": []
}
