{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],

    "module": "commonjs",
    "rootDir": "src",

    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "shared/*": ["../shared/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true // not great but makes it work
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
